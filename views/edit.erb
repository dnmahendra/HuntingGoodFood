
<form action="/dishes/<%= @dish['id'] %>" method="post">
<input type="hidden" name="_method" value="put">
<p>
	<label for="", name="">name</label>
	<input type="text", name = 'name' value="<%= @dish['name'] %>" >
</p>

<p>
	<label for="">image url</label>
	<input type="text", name = 'image_url' value="<%= @dish['image_url'] %>">
</p>

<p>
	<label for="">venue</label>
	<input type="text" name='venue' value="<%= @dish['venue'] %>">
</p>

<p>
	<label for="">dish_type</label>
	<select name="dish_type_id" value="<%= @dish['dish_type_id'] %>" >
		<% @dish_types.each do |t| %>
			<option value="<%= t['id'] %>" <%= t['id'] ==  @dish['dish_type_id'] ? "selected" : "" %>>
			<%= t['name'] %>
			</option>
		<% end %>
	</select>
</p>

<button>Update</button>
</form>
